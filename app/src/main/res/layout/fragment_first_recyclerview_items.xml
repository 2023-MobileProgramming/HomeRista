<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/flrecyclerView1">



        <Button
            android:id="@+id/testt1"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="버튼1"
            android:textSize="100dp">

        </Button>

        <Button
            android:id="@+id/testt2"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="버튼2"
            android:textSize="200dp">

        </Button>

        <Button
            android:id="@+id/testt3"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:text="버튼3"
            android:textSize="200dp">

        </Button>
    </LinearLayout>






    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/flrecyclerView2">

        <Button
            android:id="@+id/testt4"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="버튼4"
            android:textSize="50dp">

        </Button>

        <CalendarView
            android:id="@+id/testcl1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"/>

        <Button
            android:id="@+id/testt5"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:text="버튼5"
            android:textSize="100dp">

        </Button>

        <Button
            android:id="@+id/testt6"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:text="버튼6"
            android:textSize="50dp">

        </Button>






    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/flrecyclerView3">

        <CalendarView
            android:id="@+id/testcl2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/testt7"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:text="버튼7"
            android:textSize="2000dp">

        </Button>

        <Button
            android:id="@+id/testt8"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="버튼8"
            android:textSize="150dp">

        </Button>
    </LinearLayout>
    <!-- Add other views here as needed, e.g., TextViews, ImageViews -->


</LinearLayout>