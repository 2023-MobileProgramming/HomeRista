<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BeanSeekBar" parent="Widget.AppCompat.SeekBar">
        <item name="android:progressBackgroundTint">#F6E9DA</item>
        <item name="android:progressTint">#F6E9DA</item>
        <item name="android:thumbTint">#0E0504</item>
    </style>

    <style name="BeanRadioButton" parent="Theme.AppCompat.Light">
        <item name="colorAccent">#F6E9DA</item>
        <item name="colorControlNormal">#F6E9DA</item>
    </style>

    <style name="MyTimePickerStyle" parent="@android:style/Widget.Material.Light.TimePicker">
        <item name="android:timePickerMode">spinner</item>
    </style>

    <style name="DatePickerTheme.ButtonBarNegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@android:color/holo_red_light</item>
    </style>

    <style name="CustomCalendarStyle" parent="android:Widget.CalendarView">
        <!-- 캘린더의 텍스트 색상 -->
        <item name="android:textColor">#F6E9DA</item>
        <!-- 캘린더의 배경색 -->
        <item name="android:background">#F7533B30</item>
        <!-- 선택된 날짜의 색상 -->
        <item name="android:selectedWeekBackgroundColor">#FFFFFF</item>
        <!-- 기타 속성들 -->
        <!-- ... -->
    </style>

    <style name="CustomRatingBar2" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/active_rating_color</item> <!-- 활성화된 별의 색상 -->
        <item name="colorControlNormal">@color/inactive_rating_color</item> <!-- 비활성화된 별의 색상 -->
    </style>

    <style name="CustomRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/custom_ratingbar</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:maxHeight">48dp</item>
    </style>


</resources>